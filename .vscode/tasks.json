{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile and run cpp",
      "type": "process",
      "command": "cmd.exe",
      "args": [
        "/c",
        "g++ \"${file}\" -std=c++17 -o \"${fileBasenameNoExtension}\" && \"${fileBasenameNoExtension}\" < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
